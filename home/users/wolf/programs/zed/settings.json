{
  "load_direnv": "shell_hook",
  "project_panel": {
    "dock": "right"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 200,
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "file_types": {
    "Markdown": [
      "qmd",
      "md"
    ],
    "Dockerfile": [
      "Dockerfile*",
      "Containerfile*"
    ]
  },
  "theme": "True Dark",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  "scrollbar": {
    "diagnostics": "all"
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null
    }
  },
  "auto_update": false,
  "language_models": {
    "anthropic": {
      "api_url": "https://api.anthropic.com",
      "available_models": [
        {
          "display_name": "Claude Sonnet 4.1",
          "name": "claude-3-5-sonnet-20240620",
          "max_tokens": 128000,
          "max_output_tokens": 2560,
          "cache_configuration": {
            "max_cache_anchors": 10,
            "min_total_token": 10000,
            "should_speculate": false
          }
        }
      ]
    }
  },
  "git_panel": {
    "dock": "left"
  },
  "debugger": {
    "dock": "left",
    "button": false,
    "save_breakpoints": false
  },
  "agent": {
    "model_parameters": [],
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "auto_install_extensions": {
    "*": false
  },
  "auto_update_extensions": {
    "*": false
  },
  "edit_predictions": {
    "enabled_in_text_threads": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "format_on_save": "off",
  "formatter": "language_server",
  "jsx_tag_auto_close": {
    "enabled": true
  },
  "use_autoclose": true,
  "use_auto_surround": true,
  "lsp": {
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": [
                "deno.json",
                "deno.jsonc"
              ],
              "url": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json"
            },
            {
              "fileMatch": [
                "package.json"
              ],
              "url": "https://www.schemastore.org/package"
            }
          ]
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 20480
          }
        },
        "javascript": {
          "tsserver": {
            "maxTsServerMemory": 20480
          }
        }
      }
    }
  }
}
