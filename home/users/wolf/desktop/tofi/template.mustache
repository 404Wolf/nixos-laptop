width = 100%
height = 100%
border-width = 0
outline-width = 0
padding-left = 35%
padding-top = 35%
result-spacing = 25
num-results = 5

# Font Configuration
font = monospace
font-size = 14

# Color Configuration
background-color = #{{base00}}
text-color = #{{base05}}
primary-color = #{{base0D}}
selection-color = #{{base0A}}
selection-match-color = #{{base0B}}

# Border Colors
border-color = #{{base01}}
outline-color = #{{base03}}

# Prompt Configuration
prompt-text = "Run:
prompt-color = #{{base0C}}

# Input Configuration
input-color = #{{base05}}
input-background = #{{base01}}

# Result Configuration
result-color = #{{base05}}
result-background = #{{base00}}

# Selection Configuration
selection-background = #{{base02}}

# Matching Configuration
matching-algorithm = fuzzy
fuzzy-match = true

# Miscellaneous
hide-cursor
history = true
drun-launch = true
